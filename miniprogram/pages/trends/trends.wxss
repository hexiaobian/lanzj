page{
  width: 100vw
}
.info{
  position: relative;
  height: 25vh;
  margin: 0 auto 20rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  background:transparent; 
  z-index: 2;
  border-bottom: 1px solid #ddd; 
}
.shade{
  position: absolute;
  width: 90vw;
  height: 25vh;
  background-color: #33ccff; 
  opacity: .5;
  z-index: 1;
}

.info view{
  margin-left: 20rpx;
  line-height: 91rpx;
}
.info button{
  position: absolute;
  width: 250rpx;
  height: 91rpx;
  background-color: #33ccff !important;
  font-weight: normal;
  right: 20rpx;
}
.trends{
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #ddd; 
}
.head{
  flex: 1;
}
.main{
  flex: 6;
}
.main .mName{
  color: #33ccff;
  padding-bottom: 20rpx;
}
.main .source{
padding: 25rpx 0;
overflow: hidden
}
.main .source view{
  float: left;
  width: 180rpx;
  height: 200rpx;
  margin: 10rpx 10rpx 0 0;
}
.main .source view image{
  width: 100%;
  height: 100%;
}
.main .source view video{
  width: 100%;
  height: 100%;
}
.main .release{
  height: 70rpx;
  line-height: 70rpx;
  color: #8a8a8a;
  font-size: 30rpx;
}