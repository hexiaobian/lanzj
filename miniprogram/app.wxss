.container {
  width: 90%;
  margin: 0 auto;
}

.avatarUrl {
  display: block;
  width: 91rpx;
  height: 91rpx;
  border-radius: 10rpx;
}

.trends {
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
}

.head {
  flex: 1;
}

.main {
  flex: 6;
}

.main .mName {
  color: #3cf;
  padding-bottom: 20rpx;
}

.main .source {
  padding: 25rpx 0;
  overflow: hidden;
}

.main .source view {
  float: left;
  width: 180rpx;
  height: 200rpx;
  margin: 10rpx 10rpx 0 0;
}

.main .source view image {
  width: 100%;
  height: 100%;
}

.main .source view video {
  width: 100%;
  height: 100%;
}

.main .release {
  position: relative;
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  color: #8a8a8a;
  font-size: 30rpx;
}

.main .location {
  color: #3cf;
  font-size: 30rpx;
}

.main .location::before {
  content: '\e947';
  font-family: 'icomoon';
  padding-right: 10rpx;
}

.main .release .interact {
  position: absolute;
  right: 20rpx;
  display: flex;
  justify-content: space-around;
  height: 70rpx;
  width: 200rpx;
  line-height: 70rpx;
}

.main .release .interact view {
  height: 50rpx;
  width: 50rpx;
}

.main .release .interact view image {
  height: 100%;
  width: 100%;
}

.viewPort .viewTitle {
  padding: 20rpx 0;
  color: #222;
  font-size: 42rpx;
}

.viewPort .introduct {
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 32rpx;
}

.commentContainer {
  margin-top: 10rpx;
  width: 100%;
  background-color: #f3f5f7;
}
